#
# Build the docker image with `npx nx docker-build chat-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t chat-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system chat-service && \
          adduser --system -G chat-service chat-service

COPY dist/apps/chat-service chat-service
RUN chown -R chat-service:chat-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix chat-service --omit=dev -f install

CMD [ "node", "chat-service" ]
